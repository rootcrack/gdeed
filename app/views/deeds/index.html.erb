<h1>Deeds</h1>
<div id="deeds">
  <ul>
  <% @deeds.each do |deed| %>
    <li>
      <%= "#{number_to_currency(deed.amount)} donation to #{deed.charity.name}" %> - 
	  <%= link_to "Buy Deed", purchase_deed_path(deed)%>
	  <% if deed.is_pending? %>
		<%= link_to "Edit", edit_deed_path(deed)%>
	  <% end %>
    </li>
  <% end %>
  </ul>
</div>