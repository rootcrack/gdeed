<div class="sign_up">
	<div class="form_heading">
    	<h5>Create an Account</h5>
    </div><!--end of form_heading-->
    <div class="form_leftwrap">
    	<div class="form_rightwrap">
        	<div class="form_midwrap">
            	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
					<p><%= devise_error_messages! %></p>
                	<label>Full Name:</label>
                    <div class="textbox_wrapper">
                    	<%= f.text_field :name, :class => "textbox" %>
                    </div><!--end of textbox_wrapper-->
                    <label>Username:</label>
                    <div class="textbox_wrapper">
                    	<%= f.text_field :username, :class => "textbox" %>
                    </div><!--end of textbox_wrapper-->
                    <label>Email Address:</label>
                    <div class="textbox_wrapper">
                    	<%= f.email_field :email, :class => "textbox" %>
                    </div><!--end of textbox_wrapper-->
                    <p class="infonote">We promise not to share your email address to others.</p>
                    <label>Password:</label>
                    <div class="textbox_wrapper">
                    	<%= f.password_field :password, :class => "textbox" %>
                    </div><!--end of textbox_wrapper-->
                    <p class="infonote">Must contain one lowercase letter, one number, and be at least 7 characters long</p>
                    <label>Password Confirmation:</label>
                    <div class="textbox_wrapper">
                    	<%= f.password_field :password_confirmation, :class => "textbox" %>
                    </div><!--end of textbox_wrapper-->
                    <label>Zipcode:</label>
                    <div class="textbox_wrapper">
                    	<%= f.text_field :zipcode, :class => "textbox" %>
                    </div><!--end of textbox_wrapper-->
                    <div class="form_btmwrap">
                        <input type="image" src="/images/button_createanaccount.png" alt="Create an Account" class="button" />
                        <ul class="formoption">
                            <li>
								<%- if controller_name != 'sessions' %>
								  <%= link_to "Sign in", new_session_path(resource_name) %><br />
								<% end -%>
							</li>
                            <li>
								<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
								  <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
								<% end -%>
							</li>
                            <li>
								<%- if devise_mapping.omniauthable? %>
								  <%- resource_class.omniauth_providers.each do |provider| %>
								    <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %><br />
								  <% end -%>
								<% end -%>
							</li>
                        </ul>
                        <div class="clear"></div><!--end of clear-->
                    </div><!--end of form_btmwrap-->
                <% end %>
            </div><!--end of form_midwrap-->
        </div><!--end of form_rightwrap-->
    </div><!--end of form_leftwrap-->
</div><!--end of sign_up-->
