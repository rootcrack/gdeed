<h1>Success stories</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Story by</th>
    <th>Is published</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @stories.each do |story| %>
  <tr>
    <td><%= story.title %></td>
    <td><%= story.content %></td>
    <td><%= story.story_by %></td>
    <td><%= story.is_published %></td>
    <td><%= link_to 'Show', admin_story_path(story) %></td>
    <td><%= link_to 'Edit', edit_admin_story_path(story) %></td>
    <td><%= link_to 'Destroy', story, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

